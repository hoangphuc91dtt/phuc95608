    <!-- 9>CSS pseudo-classes (lớp giả) -->
    • :root ()
    • :hover (đưa chuột vào sẽ hiện)          .box:hover
    • :active(nhập vào sẽ hiện)
    • :first-child
    • :last-child 

    <!-- 10>CSS pseudo-elements -->
    ::before
    ::after
    ::first-letter (chữ cái đầu )
    ::first-line    (dòng đầu)
    ::selection     

    <!-- 11>Đệm (padding) -->
        .box3 {
            background-color: Ofirebrick;
            padding-top: 10px;
            padding-right: 10px;
            padding-bottom: 10px;
            padding-left: 10px;
        }
        .box {
            padding :10px 12px;
        }
    

    <!-- 12>Viền (border) -->
    .box3 {
        background-color: #firebrick;
        padding: 10px;
        border-width: 10px;
        border-style: solid;
        border-color: #333;
    }

    <!-- 13>khoảng lề  (margin) -->

    .box3 {
        background-color: Ofirebrick;
        margin-top: 10px;
        margin-right: 10px;
        margin-bottom: 10px;
        margin-left: 10px;
    }
    .box {
        margin :10px ;
    }

    14> Box-sizing 
    .box {
        Box-sizing :border-box ;
    }


    

    




